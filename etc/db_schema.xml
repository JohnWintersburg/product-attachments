<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="johnwwintersburg_productattachments" resource="default" engine="innodb" comment="Product Attachments Table">
        <column xsi:type="int" name="attachment_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Attachment ID"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="varchar" name="attachment_file" nullable="false" length="255" comment="Attachment File"/>
        <column xsi:type="varchar" name="attachment_label" nullable="false" length="255" comment="Attachment Label"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="attachment_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="PRODUCT_ATTACHMENTS_PRODUCT_ID_CATALOG_PRODUCT_ENTITY_ENTITY_ID" table="product_attachments" column="product_id" referenceTable="catalog_product_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>
</schema>